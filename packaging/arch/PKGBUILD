set -euo pipefail
VER="${GITHUB_REF_NAME#v}"
URL="https://github.com/Duna-tools/cbrec/archive/refs/tags/v${VER}.tar.gz"
OUT="cbrec-${VER}.tar.gz"

curl -L -o "$OUT" "$URL"
SHA="$(sha256sum "$OUT" | awk '{print $1}')"

cat > PKGBUILD <<EOF
pkgname=cbrec
pkgver=${VER}
pkgrel=1
pkgdesc="Simple and efficient stream recorder"
arch=('x86_64' 'aarch64')
url="https://github.com/Duna-tools/cbrec"
license=('MIT')
depends=('ffmpeg')
makedepends=('cargo' 'pkgconf')
source=("cbrec-\${pkgver}.tar.gz::${URL}")
sha256sums=('${SHA}')
EOF
